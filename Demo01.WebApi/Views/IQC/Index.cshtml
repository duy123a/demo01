                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Mã số SAP (code):</label>
                    <input type="text" id="materialCode" class="form-control" placeholder="Nhập mã SAP">
                </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Tên vải:</label>
                    <input type="text" id="materialName" class="form-control" placeholder="Nhập tên vải">
                </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Màu sắc:</label>
                    <input type="text" id="color" class="form-control" placeholder="Nhập màu sắc">
                </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Mã số cuộn vải:</label>
                    <input type="text" id="rollCode" class="form-control" placeholder="Nhập mã cuộn vải">
                </div>
            </div>
        </div>
    </div>

    <!-- Quality Inspection Checklist -->
            <div class="card mb-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Danh sách kiểm tra chất lượng</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-column gap-3">
                <!-- Item 1 -->
                        <div class="card border">
                            <div class="card-body">
                                <div class="fw-semibold mb-3">1. Qui cách đóng gói (tem nhãn, cách cuộn vải, tình trạng đóng gói)</div>
                                <div class="d-flex gap-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="item1" id="item1_pass" value="pass">
                                        <label class="form-check-label" for="item1_pass">Đạt</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="item1" id="item1_fail" value="fail">
                                        <label class="form-check-label" for="item1_fail">Không đạt</label>
                        </div>
                        </div>
                    </div>
                </div>

                <!-- Item 2 -->
                        <div class="card border">
                            <div class="card-body">
                                <div class="fw-semibold mb-3">2. Chiều dài thực tế/ chiều dài ghi trên cuộn vải:</div>
                                <div class="d-flex gap-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="item2" id="item2_pass" value="pass">
                                        <label class="form-check-label" for="item2_pass">Đạt</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="item2" id="item2_fail" value="fail">
                                        <label class="form-check-label" for="item2_fail">Không đạt</label>
                        </div>
                        </div>
                    </div>
                </div>

                <!-- Item 3 -->
                        <div class="card border">
                            <div class="card-body">
                                <div class="fw-semibold mb-3">3. Kiểm tra ngoại quan</div>
                                <div class="ms-3 d-flex flex-column gap-2">
                                    <div class="d-flex justify-content-between align-items-center bg-light rounded p-2" style="border-left: 4px solid #3498db;">
                                        <div class="fw-semibold">3.1/ Màu sắc</div>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="item3_1" id="item3_1_pass" value="pass">
                                                <label class="form-check-label" for="item3_1_pass">Đạt</label>
                                </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="item3_1" id="item3_1_fail" value="fail">
                                                <label class="form-check-label" for="item3_1_fail">Không đạt</label>
                                </div>
                            </div>
                        </div>

                                    <div class="d-flex justify-content-between align-items-center bg-light rounded p-2" style="border-left: 4px solid #3498db;">
                                        <div class="fw-semibold">3.2/ Khổ vải</div>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="item3_2" id="item3_2_pass" value="pass">
                                                <label class="form-check-label" for="item3_2_pass">Đạt</label>
                                </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="item3_2" id="item3_2_fail" value="fail">
                                                <label class="form-check-label" for="item3_2_fail">Không đạt</label>
                                </div>
                            </div>
                        </div>

                                    <div class="d-flex justify-content-between align-items-center bg-light rounded p-2" style="border-left: 4px solid #3498db;">
                                        <div class="fw-semibold">3.3/ Độ mềm/cứng</div>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="item3_3" id="item3_3_pass" value="pass">
                                                <label class="form-check-label" for="item3_3_pass">Đạt</label>
                                </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="item3_3" id="item3_3_fail" value="fail">
                                                <label class="form-check-label" for="item3_3_fail">Không đạt</label>
                                </div>
                            </div>
                        </div>

                                    <div class="d-flex justify-content-between align-items-center bg-light rounded p-2" style="border-left: 4px solid #3498db;">
                                        <div class="fw-semibold">3.4/ Độ dày</div>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="item3_4" id="item3_4_pass" value="pass">
                                                <label class="form-check-label" for="item3_4_pass">Đạt</label>
                                </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="item3_4" id="item3_4_fail" value="fail">
                                                <label class="form-check-label" for="item3_4_fail">Không đạt</label>
                                </div>
                            </div>
                        </div>

                                    <div class="d-flex justify-content-between align-items-center bg-light rounded p-2" style="border-left: 4px solid #3498db;">
                                        <div class="fw-semibold">3.5/ Độ thông gió/ porosity (tối thiểu 300s):</div>
                                        <div class="d-flex align-items-center gap-3">
                                            <input type="text" class="form-control" style="width: 200px;" placeholder="Nhập kết quả đo">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="item3_5" id="item3_5_pass" value="pass">
                                                <label class="form-check-label" for="item3_5_pass">Đạt</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="item3_5" id="item3_5_fail" value="fail">
                                                <label class="form-check-label" for="item3_5_fail">Không đạt</label>
                                            </div>
                                        </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Item 4 -->
                        <div class="card border">
                            <div class="card-body">
                                <div class="fw-semibold mb-3">4. Kiểm tra điểm lỗi: Tiêu chuẩn tối đa 7 lỗi /100m. Ví dụ cuộn vải dài 150m thì tối đa 10 lỗi</div>
                    
                    <!-- Defect List Table -->
                                <div class="card mt-3">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0">Danh sách lỗi phát hiện</h6>
                        </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table table-hover mb-0">
                                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 80px;">STT</th>
                                        <th>Nội dung lỗi</th>
                                        <th style="width: 100px;">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody id="defectTableBody">
                                    <!-- Defect rows will be added here dynamically -->
                                </tbody>
                            </table>
                        </div>
                                    </div>
                                    <div class="card-footer bg-light text-end">
                            <button id="addDefect" class="btn btn-primary btn-sm">+ Thêm</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Conclusion -->
    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title text-center">Kết luận</h5>
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Người kiểm:</label>
                <input type="text" id="inspector" class="form-control" placeholder="Họ tên người kiểm" required>
            </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Ngày hoàn thành:</label>
                <input type="date" id="completionDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")">
            </div>
                <div class="col-12">
                    <label class="form-label fw-semibold">Ghi chú:</label>
                <textarea id="finalNote" rows="3" class="form-control" placeholder="Nhận xét về kết quả kiểm tra..."></textarea>
            </div>
        </div>

            <div class="action-buttons d-flex justify-content-center gap-2 flex-wrap">
            <button id="saveDraft" class="btn btn-warning">💾 Lưu nháp</button>
            <button id="submitIQC" class="btn btn-primary">📤 Gửi duyệt</button>
                <button id="printReport" class="btn btn-outline-secondary">🖨️ In báo cáo</button>
            </div>
        </div>
    </div>
</div>

<script>
// Global state
const state = {
    inspectionResults: {
        item1: null,
        item2: null,
        item3_1: null,
        item3_2: null,
        item3_3: null,
        item3_4: null,
        item3_5: null
    },
    defects: []
};

// Add visual feedback for radio button selection
function updateChecklistItem(itemName, value) {
    // No visual feedback needed - keeping it simple
}

// Defect management functions
function addDefect() {
    const defectId = Date.now(); // Simple ID generation
    state.defects.push({
        id: defectId,
        content: ''
    });
    renderDefects();
}

function removeDefect(id) {
    state.defects = state.defects.filter(defect => defect.id !== id);
    renderDefects();
}

function updateDefectContent(id, content) {
    const defect = state.defects.find(d => d.id === id);
    if (defect) {
        defect.content = content;
    }
}

function renderDefects() {
    const tbody = document.getElementById('defectTableBody');
    if (!tbody) return;
    
    if (state.defects.length === 0) {
        tbody.innerHTML = '<tr><td colspan="3" class="text-center text-muted py-3">Chưa có lỗi nào được ghi nhận</td></tr>';
        return;
    }
    
    tbody.innerHTML = state.defects.map((defect, index) => `
        <tr>
            <td>${index + 1}</td>
            <td>
                <input type="text" 
                       class="form-control" 
                       value="${defect.content}" 
                       placeholder="Nhập nội dung lỗi..."
                       onchange="updateDefectContent(${defect.id}, this.value)">
            </td>
            <td>
                <button class="btn btn-danger btn-sm" onclick="removeDefect(${defect.id})">
                    🗑️ Xóa
                </button>
            </td>
        </tr>
    `).join('');
}

// Event listeners
document.addEventListener('DOMContentLoaded', function() {
    // Initialize defects table
    renderDefects();
    
    // Handle radio button changes
    document.querySelectorAll('input[type="radio"]').forEach(radio => {
        radio.addEventListener('change', (e) => {
            const name = e.target.name;
            const value = e.target.value;
            
            if (name.startsWith('item')) {
                state.inspectionResults[name] = value;
                updateChecklistItem(name, value);
            }
        });
    });
    
    // Handle add defect button
    document.getElementById('addDefect').addEventListener('click', addDefect);

    // Save draft
    document.getElementById('saveDraft').addEventListener('click', () => {
        const formData = {
            checkDate: document.getElementById('checkDate').value,
            iqcDate: document.getElementById('iqcDate').value,
            supplier: document.querySelector('input[name="supplier"]:checked')?.value,
            poNo: document.getElementById('poNo').value,
            materialCode: document.getElementById('materialCode').value,
            materialName: document.getElementById('materialName').value,
            color: document.getElementById('color').value,
            rollCode: document.getElementById('rollCode').value,
            inspector: document.getElementById('inspector').value,
            completionDate: document.getElementById('completionDate').value,
            finalNote: document.getElementById('finalNote').value,
            inspectionResults: state.inspectionResults,
            defects: state.defects
        };
        
        localStorage.setItem('iqc-draft', JSON.stringify(formData));
        
        // Show success animation
        const btn = document.getElementById('saveDraft');
        btn.style.transform = 'scale(0.95)';
        setTimeout(() => {
            btn.style.transform = 'scale(1)';
        }, 150);
        
        alert('Đã lưu nháp thành công!');
    });

    // Submit for approval
    document.getElementById('submitIQC').addEventListener('click', () => {
        const validItems = ['item1', 'item2', 'item3_1', 'item3_2', 'item3_3', 'item3_4', 'item3_5'];
        const results = validItems.map(item => state.inspectionResults[item] || null);
        const pass = results.filter(r => r === 'pass').length;
        const fail = results.filter(r => r === 'fail').length;
        const pending = results.filter(r => r === null).length;
        
        if (pending > 0) {
            alert(`Còn ${pending} tiêu chí chưa được kiểm tra. Vui lòng hoàn thành tất cả các tiêu chí trước khi gửi duyệt.`);
            return;
        }
        
        // Show success animation
        const btn = document.getElementById('submitIQC');
        btn.style.transform = 'scale(0.95)';
        setTimeout(() => {
            btn.style.transform = 'scale(1)';
        }, 150);
        
        alert(`Đã gửi duyệt thành công!\nKết quả: ${pass} đạt, ${fail} không đạt`);
    });

    // Print report
    document.getElementById('printReport').addEventListener('click', () => {
        window.print();
    });

    // Add smooth scrolling for better UX
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });
});
</script>
