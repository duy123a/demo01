@using Demo01.Shared.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Demo01.Shared.Resources.SharedResources> Localizer
@{
    ViewData["Title"] = "IQC - Nhập phiếu kiểm";
    ViewData["Page"] = "iqc";
}

<style>
    /* Reset và Base Styles */
    * {
        box-sizing: border-box;
    }
    
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f8f9fa;
        margin: 0;
        padding: 0;
        line-height: 1.6;
        color: #333;
    }
    
    /* Container */
    .iqc-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        margin-bottom: 20px;
    }
    
    /* Header */
    .iqc-header {
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #dee2e6;
    }
    
    .iqc-title {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin: 0 0 8px 0;
    }
    
    .iqc-subtitle {
        font-size: 14px;
        color: #666;
        margin: 0;
    }
    
    /* Section Styles */
    .iqc-section {
        margin-bottom: 25px;
        background: white;
        border-radius: 6px;
        border: 1px solid #dee2e6;
    }
    
    .section-header {
        background: #f8f9fa;
        color: #333;
        padding: 12px 20px;
        margin: 0;
        font-size: 16px;
        font-weight: 600;
        border-bottom: 1px solid #dee2e6;
    }
    
    .section-content {
        padding: 20px;
    }
    
    /* Form Grid */
    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 20px;
    }
    
    .form-group {
        display: flex;
        flex-direction: column;
    }
    
    .form-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 6px;
        font-size: 14px;
    }
    
    .form-control {
        padding: 10px 12px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        font-size: 14px;
        transition: border-color 0.2s ease;
        background: white;
    }
    
    .form-control:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.1);
    }
    
    .form-control::placeholder {
        color: #6c757d;
    }
    
    /* Radio Groups */
    .radio-group {
        display: flex;
        gap: 15px;
        margin-top: 8px;
    }
    
    .radio-item {
        display: flex;
        align-items: center;
        gap: 6px;
        cursor: pointer;
    }
    
    .radio-item input[type="radio"] {
        width: 16px;
        height: 16px;
        accent-color: #007bff;
        cursor: pointer;
    }
    
    .radio-item label {
        font-weight: 400;
        color: #333;
        margin: 0;
        cursor: pointer;
        font-size: 14px;
    }
    
    /* Checklist Items */
    .checklist-container {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }
    
    .checklist-item {
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        padding: 15px;
        transition: border-color 0.2s ease;
    }
    
    .checklist-item:hover {
        border-color: #ced4da;
    }
    
    .checklist-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 12px;
        font-size: 14px;
        line-height: 1.4;
    }
    
    .sub-items {
        margin-left: 20px;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }
    
    .sub-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid #3498db;
    }
    
    .sub-item-label {
        font-weight: 500;
        color: #34495e;
        font-size: 14px;
    }
    
    .sub-item-input {
        display: flex;
        align-items: center;
        gap: 15px;
    }
    
    .inline-input {
        width: 200px;
        padding: 8px 12px;
        border: 1px solid #bdc3c7;
        border-radius: 6px;
        font-size: 13px;
    }
    
    .inline-input:focus {
        outline: none;
        border-color: #3498db;
        box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.1);
    }
    
    /* Defect List Styles */
    .defect-list-container {
        margin-top: 15px;
        background: white;
        border-radius: 6px;
        border: 1px solid #dee2e6;
        overflow: hidden;
    }
    
    .defect-table-header {
        padding: 12px 15px;
        background: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
    }
    
    .defect-table-header h4 {
        margin: 0;
        font-size: 14px;
        font-weight: 500;
        color: #333;
    }
    
    .defect-table-footer {
        padding: 12px 15px;
        background: #f8f9fa;
        border-top: 1px solid #dee2e6;
        text-align: right;
    }
    
    .btn-sm {
        padding: 6px 12px;
        font-size: 12px;
        border-radius: 4px;
    }
    
    .defect-table {
        padding: 0;
    }
    
    .defect-table .table {
        margin: 0;
        border: none;
    }
    
    .defect-table .table thead th {
        background: #e9ecef;
        border: none;
        font-weight: 600;
        color: #495057;
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 12px 15px;
    }
    
    .defect-table .table tbody td {
        border: none;
        padding: 12px 15px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f3f4;
    }
    
    .defect-table .table tbody tr:hover {
        background: #f8f9fa;
    }
    
    .defect-input {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        font-size: 14px;
        transition: all 0.2s ease;
    }
    
    .defect-input:focus {
        outline: none;
        border-color: #3498db;
        box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.1);
    }
    
    .btn-delete {
        background: #e74c3c;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        font-size: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .btn-delete:hover {
        background: #c0392b;
        transform: scale(1.05);
    }
    
    .defect-counter {
        font-size: 12px;
        color: #6c757d;
        font-style: italic;
        margin-top: 10px;
        text-align: right;
    }
    
    /* Action Buttons */
    .action-section {
        background: white;
        border-radius: 12px;
        padding: 25px;
        margin-top: 20px;
        border: 1px solid #e9ecef;
    }
    
    .action-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        text-align: center;
    }
    
    .action-form {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 25px;
    }
    
    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
    }
    
    .btn {
        padding: 8px 16px;
        border: 1px solid transparent;
        border-radius: 4px;
        font-weight: 500;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .btn-primary {
        background: #007bff;
        color: white;
        border-color: #007bff;
    }
    
    .btn-primary:hover {
        background: #0056b3;
        border-color: #0056b3;
    }
    
    .btn-warning {
        background: #ffc107;
        color: #212529;
        border-color: #ffc107;
    }
    
    .btn-warning:hover {
        background: #e0a800;
        border-color: #d39e00;
    }
    
    .btn-outline {
        background: transparent;
        border: 1px solid #6c757d;
        color: #6c757d;
    }
    
    .btn-outline:hover {
        background: #6c757d;
        color: white;
    }
    
    /* Responsive Design */
    @@media (max-width: 768px) {
        .iqc-container {
            margin: 10px;
            padding: 15px;
        }
        
        .iqc-title {
            font-size: 24px;
        }
        
        .form-grid {
            grid-template-columns: 1fr;
        }
        
        .action-form {
            grid-template-columns: 1fr;
        }
        
        .radio-group {
            flex-direction: column;
            gap: 10px;
        }
        
        .action-buttons {
            flex-direction: column;
        }
        
        .sub-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }
        
        .sub-item-input {
            width: 100%;
            justify-content: flex-start;
        }
        
        .inline-input {
            width: 100%;
        }
    }
    
    /* Print Styles */
    @@media print {
        body {
            background: white;
        }
        
        .iqc-container {
            box-shadow: none;
            margin: 0;
            padding: 0;
        }
        
        .action-buttons {
            display: none;
        }
        
        .checklist-item {
            break-inside: avoid;
        }
    }
    
</style>

<div class="iqc-container">
    <!-- Header -->
    <div class="iqc-header">
        <h1 class="iqc-title">IQC - Nhập phiếu kiểm nguyên vật liệu đầu vào</h1>
        <p class="iqc-subtitle">Giao diện nhập liệu cho người kiểm (IQC) — kiểm tra chất lượng NVL đầu vào để sản xuất dù lượn</p>
    </div>

