    <div class="iqc-section">
        <h2 class="section-header">Thông tin cơ bản</h2>
        <div class="section-content">
            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">Ngày kiểm:</label>
                    <input type="date" id="checkDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="form-group">
                    <label class="form-label">Ngày nhận hàng:</label>
                    <input type="date" id="iqcDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="form-group">
                    <label class="form-label">Nhà cung cấp:</label>
                    <div class="radio-group">
                        <div class="radio-item">
                            <input type="radio" name="supplier" id="supplier_dominico" value="Dominico">
                            <label for="supplier_dominico">Dominico</label>
                        </div>
                        <div class="radio-item">
                            <input type="radio" name="supplier" id="supplier_porcher" value="Porcher">
                            <label for="supplier_porcher">Porcher</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Số PO / số Lô:</label>
                    <input type="text" id="poNo" class="form-control" placeholder="Nhập số PO/Lô">
                </div>
                <div class="form-group">
                    <label class="form-label">Mã số SAP (code):</label>
