<script>
// Global state
const state = {
    inspectionResults: {
        item1: null,
        item2: null,
        item3_1: null,
        item3_2: null,
        item3_3: null,
        item3_4: null,
        item3_5: null
    },
    defects: []
};

// Add visual feedback for radio button selection
function updateChecklistItem(itemName, value) {
    // No visual feedback needed - keeping it simple
}

// Defect management functions
function addDefect() {
    const defectId = Date.now(); // Simple ID generation
    state.defects.push({
        id: defectId,
        content: ''
    });
    renderDefects();
}

function removeDefect(id) {
    state.defects = state.defects.filter(defect => defect.id !== id);
    renderDefects();
}

function updateDefectContent(id, content) {
    const defect = state.defects.find(d => d.id === id);
    if (defect) {
        defect.content = content;
    }
}

function renderDefects() {
    const tbody = document.getElementById('defectTableBody');
    if (!tbody) return;
    
    if (state.defects.length === 0) {
        tbody.innerHTML = '<tr><td colspan="3" class="text-center text-muted">Chưa có lỗi nào được ghi nhận</td></tr>';
        return;
    }
    
    tbody.innerHTML = state.defects.map((defect, index) => `
        <tr>
            <td>${index + 1}</td>
            <td>
                <input type="text" 
                       class="defect-input" 
                       value="${defect.content}" 
                       placeholder="Nhập nội dung lỗi..."
                       onchange="updateDefectContent(${defect.id}, this.value)">
            </td>
            <td>
                <button class="btn-delete" onclick="removeDefect(${defect.id})">
                    🗑️ Xóa
                </button>
            </td>
        </tr>
    `).join('');
}

// Event listeners
document.addEventListener('DOMContentLoaded', function() {
    // Initialize defects table
    renderDefects();
    
    // Handle radio button changes
    document.querySelectorAll('input[type="radio"]').forEach(radio => {
        radio.addEventListener('change', (e) => {
            const name = e.target.name;
            const value = e.target.value;
            
            if (name.startsWith('item')) {
                state.inspectionResults[name] = value;
                updateChecklistItem(name, value);
            }
        });
    });
    
    // Handle add defect button
    document.getElementById('addDefect').addEventListener('click', addDefect);

    // Save draft
    document.getElementById('saveDraft').addEventListener('click', () => {
        const formData = {
            checkDate: document.getElementById('checkDate').value,
            iqcDate: document.getElementById('iqcDate').value,
            supplier: document.querySelector('input[name="supplier"]:checked')?.value,
            poNo: document.getElementById('poNo').value,
            materialCode: document.getElementById('materialCode').value,
            materialName: document.getElementById('materialName').value,
            color: document.getElementById('color').value,
            rollCode: document.getElementById('rollCode').value,
            inspector: document.getElementById('inspector').value,
            completionDate: document.getElementById('completionDate').value,
            finalNote: document.getElementById('finalNote').value,
            inspectionResults: state.inspectionResults,
            defects: state.defects
        };
        
        localStorage.setItem('iqc-draft', JSON.stringify(formData));
        
        // Show success animation
        const btn = document.getElementById('saveDraft');
        btn.style.transform = 'scale(0.95)';
        setTimeout(() => {
            btn.style.transform = 'scale(1)';
        }, 150);
        
        alert('Đã lưu nháp thành công!');
    });

    // Submit for approval
    document.getElementById('submitIQC').addEventListener('click', () => {
        const validItems = ['item1', 'item2', 'item3_1', 'item3_2', 'item3_3', 'item3_4', 'item3_5'];
        const results = validItems.map(item => state.inspectionResults[item] || null);
        const pass = results.filter(r => r === 'pass').length;
        const fail = results.filter(r => r === 'fail').length;
        const pending = results.filter(r => r === null).length;
        
        if (pending > 0) {
            alert(`Còn ${pending} tiêu chí chưa được kiểm tra. Vui lòng hoàn thành tất cả các tiêu chí trước khi gửi duyệt.`);
            return;
        }
        
        // Show success animation
        const btn = document.getElementById('submitIQC');
        btn.style.transform = 'scale(0.95)';
        setTimeout(() => {
            btn.style.transform = 'scale(1)';
        }, 150);
        
        alert(`Đã gửi duyệt thành công!\nKết quả: ${pass} đạt, ${fail} không đạt`);
    });

    // Print report
    document.getElementById('printReport').addEventListener('click', () => {
        window.print();
    });

    // Add smooth scrolling for better UX
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });
});
</script>