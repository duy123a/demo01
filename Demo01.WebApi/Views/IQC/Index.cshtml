                                    <input type="radio" name="item3_2" id="item3_2_pass" value="pass">
                                    <label for="item3_2_pass">Đạt</label>
                                </div>
                                <div class="radio-item">
                                    <input type="radio" name="item3_2" id="item3_2_fail" value="fail">
                                    <label for="item3_2_fail">Không đạt</label>
