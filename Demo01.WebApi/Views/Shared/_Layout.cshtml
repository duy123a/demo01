@using Demo01.Shared.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Demo01.Shared.Resources.SharedResources> Localizer
@{
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var userName = User.Identity?.Name?.Split('@').First() ?? string.Empty;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Demo01</title>
    <script type="importmap"></script>
    <link rel="stylesheet" vite-href="~/js/main.js" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="w-100" data-page="@ViewData["Page"]">
    <div class="main-container">
        @if (isAuthenticated)
        {
            <aside class="sidebar d-flex flex-column justify-content-between bg-white border-end">
                <!-- Top -->
                <div class="sidebar-top position-relative">
                    <!-- Logo (only shown on mobile) -->
                    <div class="sidebar-logo-mobile d-xl-none position-absolute top-0 end-0 p-2">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="/images/logo.svg" alt="Logo" class="img-fluid" style="width: 128px; height: auto;">
                        </a>
                    </div>

                    <!-- Avatar dropdown -->
                    <div class="p-3">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="/Account/Avatar/@User.Identity?.Name" alt="Avatar" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                                <span class="fw-semibold d-none d-sm-inline">@userName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="Account" asp-action="ChangePassword">
                                        <i class="bi bi-key me-2"></i>@Localizer["Button_Change_Password"]
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="javascript:void(0);" onclick="showLogoutModal()">
                                        <i class="bi bi-box-arrow-right me-2"></i>@Localizer["Button_Logout"]
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Menu button only shown (< xl) -->
                    <button class="btn btn-outline-secondary d-xl-none m-2" type="button"
                            data-bs-toggle="offcanvas" data-bs-target="#sidebarNav"
                            aria-controls="sidebarNav">
                        <i class="bi bi-list"></i> Menu
                    </button>

                    <!-- Sidebar desktop only shown (> xl) -->
                    <div class="d-none d-xl-block" id="sidebarNavDesktop">
                        <nav class="nav flex-column nav-pills p-2">
                            <a href="/" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home"
            && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "sidebar-link active" : "sidebar-link")">
                                @Localizer["Button_Home"]
                            </a>
                            <a href="/Home/Privacy" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home"
            && ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "sidebar-link active" : "sidebar-link")">
                                @Localizer["Button_Privacy"]
                            </a>
                        </nav>
                    </div>

                    <!-- Offcanvas for mobile (< xl) -->
                    <div class="offcanvas offcanvas-start d-xl-none" tabindex="-1" id="sidebarNav" aria-labelledby="sidebarNavLabel">
                        <div class="offcanvas-header">
                            <h5 class="offcanvas-title" id="sidebarNavLabel">Menu</h5>
                            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
                        </div>
                        <div class="offcanvas-body p-0">
                            <nav class="nav flex-column nav-pills p-2">
                                <a href="/" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home"
            && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "sidebar-link active" : "sidebar-link")">
                                    @Localizer["Button_Home"]
                                </a>
                                <a href="/Home/Privacy" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home"
            && ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "sidebar-link active" : "sidebar-link")">
                                    @Localizer["Button_Privacy"]
                                </a>
                            </nav>
                        </div>
                    </div>
                </div>

                <!-- Bottom logo desktop -->
                <div class="sidebar-logo-desktop p-3 d-none d-xl-block">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="/images/logo.svg" alt="Logo" class="img-fluid">
                    </a>
                </div>
            </aside>
        }
        <div class="d-flex flex-column flex-grow-1">
            @if (isAuthenticated)
            {
                <header>
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow" aria-label="Top navigation bar">
                        <div class="container-fluid px-4 py-2 d-flex justify-content-start align-items-center gap-2">
                            <i class="bi bi-layout-sidebar me-1 text-demo-indigo"></i>
                            <a href="/" class="text-demo-indigo text-decoration-none">@Localizer["Dashboards"]</a>

                            @if (ViewContext.RouteData.Values["action"]?.ToString() == "Privacy")
                            {
                                <span class="mx-1 text-muted">/</span>
                                <span class="text-demo-primary">
                                    @Localizer["Button_Privacy"]
                                </span>
                            }
                        </div>
                        <div class="container-fluid d-flex justify-content-end me-2">
                            <!-- QR Scan Button -->
                            <div class="me-2">
                                <button id="btnQrScan" class="btn btn-demo-primary">
                                    <i class="bi bi-qr-code-scan"></i>
                                </button>
                            </div>

                            <!-- Language Switch -->
                            <div class="me-2">
                                <form method="post" asp-controller="Culture" asp-action="SetLanguage" class="form-check form-switch" onsubmit="showLoading()">
                                    <input type="checkbox" class="form-check-input no-animate" id="langSwitch"
                                           onchange="this.form.submit()"
                                           name="culture"
                                           value="vi" @(Thread.CurrentThread.CurrentCulture.Name == SupportedCultures.Vietnamese ? "checked" : string.Empty) />
                                    <label class="form-check-label" for="langSwitch">
                                        @(Thread.CurrentThread.CurrentCulture.Name == SupportedCultures.Vietnamese ? SupportedCultures.VietnamLang : SupportedCultures.EnglishLang)
                                    </label>
                                    <input type="hidden" name="returnUrl" value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />
                                </form>
                            </div>

                            <!-- Notification Bell -->
                            @if (isAuthenticated)
                            {
                                <div class="dropdown" id="notificationDropdown">
                                    <a class="nav-link position-relative" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" id="notificationToggle">
                                        <i class="bi bi-bell fs-5"></i>
                                        <span id="notificationBadge"
                                              class="position-absolute top-100 start-100 translate-middle badge rounded-pill bg-danger d-none">
                                            0
                                        </span>
                                    </a>

                                    <ul id="notificationList" class="dropdown-menu dropdown-menu-end p-2" style="width: 320px; max-height: 400px; overflow-y: auto;">
                                        <li class="dropdown-header fw-semibold">@Localizer["Notifications"]</li>
                                        <li>
                                            <div class="text-center text-muted small p-2">@Localizer["NoNotifications"]</div>
                                        </li>

                                        <li class="text-center mt-1 d-none" id="showMoreLi">
                                            <button id="showMoreBtn" class="btn btn-sm btn-asaka-submit w-100">
                                                @Localizer["ShowMore"]
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            }
                        </div>
                    </nav>
                </header>
            }
            <div class="flex-grow-1 overflow-auto">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- Logout Modal -->
    <div class="modal fade" id="confirmLogoutModal" tabindex="-1" aria-labelledby="confirmLogoutLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center">
                <!-- Title -->
                <div class="modal-header text-white" style="background-color: #2BA7A4; ">
                    <h5 class="modal-title w-100" id="confirmLogoutLabel">@Localizer["Logout_Confirmation"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Content -->
                <div class="modal-body">
                    @Html.Raw(Localizer["Logout_Confirmation_Content"])
                </div>

                <!-- Footer Buttons -->
                <div class="modal-footer justify-content-center border-0">
                    <button type="button" class="btn btn-logout-yes" id="confirmLogoutBtn">@Localizer["Yes"]</button>
                    <button type="button" class="btn btn-logout-no" data-bs-dismiss="modal">@Localizer["No"]</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Configuration Data -->
    <div id="layout-config" class="d-none"
         data-is-authenticated="@(User.Identity?.IsAuthenticated.ToString().ToLower())"
         data-culture="@Thread.CurrentThread.CurrentCulture.Name">
    </div>

    <!-- QR Scan Modal -->
    <div class="modal fade" id="qrScanModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Scan QR Code</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="qr-reader">
                        <video id="qr-video" playsinline muted style="width:100%;border-radius:1rem;"></video>
                    </div>
                    <div id="qr-loading" class="text-center d-none">📷 Initializing camera...</div>
                    <div id="qr-result" class="mt-3 text-success fw-bold"></div>
                </div>
            </div>
        </div>
    </div>

    <script type="module" vite-src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_LoadingOverlay")
    @await Html.PartialAsync("_ToastNotification")
</body>
</html>
