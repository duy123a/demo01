@using Demo01.Shared.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Demo01.Shared.Resources.SharedResources> Localizer
@{
    ViewData["Title"] = Localizer["Calendar_Title"];
    ViewData["Page"] = "maintenance-schedule";
}

<div class="row g-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="bi bi-calendar3"></i> @Localizer["Calendar_Maintenance_Schedule_Title"]</h5>
                <div class="btn-group">
                    <button class="btn btn-sm btn-outline-primary" id="prevMonth">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-primary" id="todayBtn">@Localizer["Calendar_Today"]</button>
                    <button class="btn btn-sm btn-outline-primary" id="nextMonth">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div id="calendar">
                    <!-- Fallback content if JavaScript fails -->
                    <div class="text-center text-muted">
                        <i class="bi bi-calendar3" style="font-size: 3rem;"></i>
                        <p class="mt-3">Đang tải lịch bảo trì...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script vite-src="~/js/calendar.js"></script>
}
