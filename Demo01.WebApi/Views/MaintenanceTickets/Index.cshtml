@using Demo01.Shared.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Demo01.Shared.Resources.SharedResources> Localizer
@{
    ViewData["Title"] = Localizer["Tickets_Title"];
    ViewData["Page"] = "maintenance-tickets";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5><i class="bi bi-clipboard-check"></i> @Localizer["Tickets_List_Title"]</h5>
            <small class="text-muted">@Localizer["Tickets_List_Subtitle"]</small>
        </div>
        <div>
            <button class="btn btn-primary btn-sm" id="createTicketBtn">
                <i class="bi bi-plus-circle"></i> @Localizer["Tickets_Create_New"]
            </button>
        </div>
    </div>
    <div class="card-body">
        <!-- Workflow Explanation -->
        <div class="alert alert-info mb-3">
            <h6><i class="bi bi-info-circle"></i> @Localizer["Tickets_Workflow_Title"]</h6>
            <div class="row text-center">
                <div class="col-md-2">
                    <div class="workflow-step">
                        <i class="bi bi-plus-circle text-primary"></i>
                        <h6>@Localizer["Tickets_Workflow_Create"]</h6>
                        <small>@Localizer["Tickets_Workflow_Create_Desc"]</small>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="workflow-step">
                        <i class="bi bi-gear-fill text-info"></i>
                        <h6>@Localizer["Tickets_Workflow_Classify"]</h6>
                        <small>@Localizer["Tickets_Workflow_Classify_Desc"]</small>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="workflow-step">
                        <i class="bi bi-play-circle text-warning"></i>
                        <h6>@Localizer["Tickets_Workflow_Execute"]</h6>
                        <small>@Localizer["Tickets_Workflow_Execute_Desc"]</small>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="workflow-step">
                        <i class="bi bi-box-seam text-secondary"></i>
                        <h6>@Localizer["Tickets_Workflow_Input"]</h6>
                        <small>@Localizer["Tickets_Workflow_Input_Desc"]</small>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="workflow-step">
                        <i class="bi bi-check-circle text-success"></i>
                        <h6>@Localizer["Tickets_Workflow_Complete"]</h6>
                        <small>@Localizer["Tickets_Workflow_Complete_Desc"]</small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@Localizer["Tickets_Table_ID"]</th>
                        <th>@Localizer["Tickets_Table_Equipment"]</th>
                        <th>@Localizer["Tickets_Table_Responsible"]</th>
                        <th>@Localizer["Tickets_Table_Created_Date"]</th>
                        <th>@Localizer["Tickets_Table_Maintenance_Type"]</th>
                        <th>@Localizer["Tickets_Table_Assignee"]</th>
                        <th>@Localizer["Tickets_Table_Priority"]</th>
                        <th>@Localizer["Tickets_Table_Status"]</th>
                        <th>@Localizer["Tickets_Table_Actions"]</th>
                    </tr>
                </thead>
                <tbody id="ticketsTable">
                    <!-- Populated by JS -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Ticket Modal -->
<div class="modal fade" id="createTicketModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Localizer["Tickets_Create_Modal_Title"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createTicketForm">
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Tickets_Equipment_Label"] <span class="text-danger">*</span></label>
                        <select class="form-select" id="ticketEquipment" required>
                            <option value="">@Localizer["Tickets_Select_Equipment"]</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Tickets_Created_Date_Label"] <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" id="ticketDate" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Tickets_Responsible_Label"] <span class="text-danger">*</span></label>
                        <select class="form-select" id="ticketResponsible" required>
                            <option value="">@Localizer["Tickets_Select_Responsible"]</option>
                            <option value="Nguyễn Văn A">Nguyễn Văn A</option>
                            <option value="Trần Thị B">Trần Thị B</option>
                            <option value="Lê Văn C">Lê Văn C</option>
                            <option value="Phạm Văn D">Phạm Văn D</option>
                            <option value="Hoàng Thị E">Hoàng Thị E</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Tickets_Maintenance_Type_Label"] <span class="text-danger">*</span></label>
                        <select class="form-select" id="ticketType" required>
                            <option value="">@Localizer["Tickets_Select_Maintenance_Type"]</option>
                            <option value="internal">@Localizer["Tickets_Type_Internal"]</option>
                            <option value="external">@Localizer["Tickets_Type_External"]</option>
                        </select>
                    </div>
                    <div class="mb-3" id="internalAssigneeSection" style="display: none;">
                        <label class="form-label">@Localizer["Tickets_Assignee_Label"] <span class="text-danger">*</span></label>
                        <select class="form-select" id="ticketAssignee">
                            <option value="">@Localizer["Tickets_Select_Assignee"]</option>
                            <option value="Nguyễn Văn A">Nguyễn Văn A</option>
                            <option value="Trần Thị B">Trần Thị B</option>
                            <option value="Lê Văn C">Lê Văn C</option>
                            <option value="Phạm Văn D">Phạm Văn D</option>
                            <option value="Hoàng Thị E">Hoàng Thị E</option>
                        </select>
                    </div>
                    <div class="mb-3" id="externalVendorSection" style="display: none;">
                        <label class="form-label">@Localizer["Tickets_Vendor_Label"] <span class="text-danger">*</span></label>
                        <select class="form-select" id="ticketVendor">
                            <option value="">@Localizer["Tickets_Select_Vendor"]</option>
                            <option value="Công ty ABC">Công ty ABC</option>
                            <option value="Công ty XYZ">Công ty XYZ</option>
                            <option value="Công ty DEF">Công ty DEF</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Tickets_Description_Label"] <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="ticketDescription" rows="3" required placeholder="@Localizer["Tickets_Description_Placeholder"]"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Tickets_Due_Date_Label"] <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" id="ticketDueDate" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Tickets_Priority_Label"]</label>
                        <select class="form-select" id="ticketPriority">
                            <option value="low">@Localizer["Tickets_Priority_Low"]</option>
                            <option value="medium" selected>@Localizer["Tickets_Priority_Medium"]</option>
                            <option value="high">@Localizer["Tickets_Priority_High"]</option>
                            <option value="urgent">@Localizer["Tickets_Priority_Urgent"]</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Tickets_Modal_Cancel"]</button>
                <button type="button" class="btn btn-primary" id="submitTicket">@Localizer["Tickets_Modal_Create"]</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Ticket Modal -->
