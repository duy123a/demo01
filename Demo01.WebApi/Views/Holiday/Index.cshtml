@model IEnumerable<Demo01.Infrastructure.Entities.Holiday>
@using Demo01.Shared.Utilities
@{
    ViewData["Title"] = "Holiday List";
    var year = ViewBag.Year as int? ?? DateTime.UtcNow.Year;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Holidays in @year</h2>

        <form asp-action="Index" method="get" class="d-flex align-items-center">
            <select name="year" class="form-select me-2" onchange="this.form.submit()">
                @for (int y = DateTime.UtcNow.Year - 5; y <= DateTime.UtcNow.Year + 5; y++)
                {
                    <option value="@y" selected="@(y == year ? "selected" : null)">@y</option>
                }
            </select>
        </form>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="mb-3">
        <form asp-action="Add" method="post" class="d-flex align-items-center gap-2">
            <input type="date" name="date" class="form-control" required />
            <textarea name="description" placeholder="Description (optional)" class="form-control" rows="1" style="resize:none;"></textarea>
            <button type="submit" class="btn btn-demo-submit flex-shrink-0">Add Holiday</button>
        </form>
    </div>

    <div class="mb-3">
        <form asp-action="ImportFromGoogle" method="get" class="d-flex align-items-center gap-2">
            <input type="hidden" name="year" value="@year" />
            <button type="submit" class="btn btn-demo-submit">
                <i class="bi bi-cloud-download"></i> Import from Google Calendar
            </button>
        </form>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th style="width: 160px;">Date</th>
                <th>Description</th>
                <th style="width: 100px;"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToLocalTimeString()</td>
                        <td>@item.Description</td>
                        <td class="text-center">
                            <form asp-action="Delete" method="post" asp-route-id="@item.Id" onsubmit="return confirm('Delete this holiday?');">
                                <input type="hidden" name="year" value="@year" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No holidays found for this year.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
