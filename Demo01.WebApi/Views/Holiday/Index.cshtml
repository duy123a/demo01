@model IEnumerable<Demo01.Infrastructure.Entities.Holiday>
@{
    ViewData["Title"] = "Holiday List";
    var year = ViewBag.Year as int? ?? DateTime.UtcNow.Year;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Holidays in @year</h2>

        <form asp-action="Index" method="get" class="d-flex">
            <input type="number" name="year" value="@year" class="form-control me-2" min="2000" max="2100" />
            <button type="submit" class="btn btn-primary">View</button>
        </form>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="mb-3 d-flex flex-column flex-sm-row gap-2">
        <form asp-action="ImportFromGoogle" method="get" class="d-flex align-items-center gap-2">
            <input type="hidden" name="year" value="@year" />
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-cloud-download"></i> Import from Google Calendar
            </button>
        </form>

        <form asp-action="Add" method="post" class="d-flex align-items-center gap-2">
            <input type="date" name="date" class="form-control" required />
            <input type="text" name="description" placeholder="Description (optional)" class="form-control" />
            <button type="submit" class="btn btn-success">+ Add Holiday</button>
        </form>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th style="width: 160px;">Date</th>
                <th>Description</th>
                <th style="width: 100px;"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToOffset(TimeSpan.FromHours(7)).ToString("dd/MM/yyyy")</td>
                        <td>@item.Description</td>
                        <td class="text-center">
                            <form asp-action="Delete" method="post" asp-route-id="@item.Id" onsubmit="return confirm('Delete this holiday?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No holidays found for this year.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
