}

<div class="container-wrapper">
    <h4 class="report-title">
        PANEL ASSEMBLE INSPECTION REPORT <br />
        BÁO CÁO KIỂM HÀNG CỦA QC GHÉP VẢI
    </h4>
    <div class="table-container">
        <table id="inspectionTable" class="inspection-table">
            <thead>
                <tr>
                    <th colspan="6" class="info-header">Thông tin hàng kiểm</th>
                    <th colspan="12" class="error-header">Lỗi may</th>
                </tr>
                <tr class="info-subheader">
                    <th class="sticky-header-col col-1">STT</th>
                    <th class="sticky-header-col col-2">Tên dù</th>
                    <th class="sticky-header-col col-3">Tên người ghép vải</th>
                    <th class="sticky-header-col col-4">Top/Bottom</th>
                    <th class="sticky-header-col col-5">Tên QC</th>
                    <th class="sticky-header-col col-6">Tổng SL lỗi</th>
                    <th>Đứt chỉ, bung chỉ, sụp mí</th>
                    <th>Đường may nhăn</th>
                    <th>Không lại mũi</th>
                    <th>Lại mũi nhặt ngắn</th>
                    <th>Lại mũi không trùng</th>
                    <th>May sai cự ly</th>
                    <th>May lệ mí</th>
                    <th>Sai số mũi chỉ/1cm</th>
                    <th>Không trùng lỗ</th>
                    <th>Lỗi vải</th>
                    <th>Vải dơ</th>
                    <th>Lỗi khác</th>
                </tr>
            </thead>
            <tbody id="inspectionBody"></tbody>
        </table>
    </div>
    
    <!-- Finish Button -->
    <div class="finish-button-container">
        <button type="button" id="finishBtn" class="btn-finish">
            ✓ Kết thúc
        </button>
    </div>
</div>

<!-- Modal for Defect Request -->
<div id="defectModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Yêu cầu xử lý lỗi</h3>
            <span class="close-modal">&times;</span>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="requestType">Yêu cầu: <span class="required">*</span></label>
                <select id="requestType" class="form-control">
                    <option value="">-- Chọn yêu cầu --</option>
                    <option value="edit">Chỉnh sửa sản phẩm</option>
                    <option value="remake">Cắt vải làm lại</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="reason">Lý do: <span class="required">*</span></label>
                <textarea id="reason" class="form-control" rows="4" placeholder="Nhập lý do chi tiết..."></textarea>
            </div>
            
            <div class="form-group">
                <button type="button" id="capturePhotoBtn" class="btn-camera">
                    📷 Chụp ảnh
                </button>
                <input type="file" id="photoInput" accept="image/*" capture="environment" style="display: none;">
                <div id="photoPreview" class="photo-preview"></div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" id="cancelBtn">Hủy</button>
            <button type="button" class="btn btn-primary" id="submitBtn">Gửi yêu cầu</button>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let inspectionData = [];
    const defectKeys = [
        "dut_chi", "duong_may_nhan", "khong_lai_mui",
        "lai_mui_nhat_ngan", "lai_mui_khong_trung",
        "may_sai_cu_ly", "may_le_mi", "sai_so_mui",
        "khong_trung_lo", "loi_vai", "vai_do", "loi_khac"
    ];

    let saveTimeout = null;

    // Load data
    fetch('/api/inspection/')
        .then(res => res.json())
        .then(data => {
            inspectionData = data;
            renderTable();
        })
        .catch(err => console.error("Lỗi khi tải JSON:", err));

    function renderTable() {
        const body = document.getElementById("inspectionBody");
        const fragment = document.createDocumentFragment();
        
        inspectionData.forEach((row, index) => {
            const tr = document.createElement('tr');
            
            // Create sticky columns with proper styling
            const sttCell = document.createElement('td');
            sttCell.className = 'sticky-col col-1';
            sttCell.style.color = '#000';
            sttCell.textContent = index + 1;
            tr.appendChild(sttCell);
            
            const duCell = document.createElement('td');
            duCell.className = 'sticky-col col-2';
            duCell.style.color = '#000';
            duCell.textContent = row.ten_du || '';
            tr.appendChild(duCell);
            
            const ghepVaiCell = document.createElement('td');
            ghepVaiCell.className = 'sticky-col col-3';
            ghepVaiCell.style.color = '#000';
            ghepVaiCell.textContent = row.ten_ghep_vai || '';
            tr.appendChild(ghepVaiCell);
            
            const topBottomCell = document.createElement('td');
            topBottomCell.className = 'sticky-col col-4';
            topBottomCell.style.color = '#000';
            topBottomCell.textContent = row.top_bottom || '';
            tr.appendChild(topBottomCell);
            
            const qcCell = document.createElement('td');
            qcCell.className = 'sticky-col col-5';
            qcCell.style.color = '#000';
            qcCell.textContent = row.ten_qc || '';
            tr.appendChild(qcCell);
            
            const totalCell = document.createElement('td');
            totalCell.className = 'sticky-col col-6 total';
            totalCell.textContent = row.tong_loi || 0;
            tr.appendChild(totalCell);
            
            // Defect columns - number inputs with plus icon
            defectKeys.forEach(key => {
                const val = parseInt(row[key]) || 0;
                const td = document.createElement('td');
                td.className = 'defect-cell';
                
                const wrapper = document.createElement('div');
                wrapper.className = 'input-wrapper';
                
                const input = document.createElement('input');
                input.type = 'number';
                input.className = 'defect-input';
                input.value = val;
                input.min = '0';
                input.step = '1';
                input.dataset.index = index;
                input.dataset.key = key;
                input.inputMode = 'numeric';
                input.pattern = '[0-9]*';
                
                const plusBtn = document.createElement('button');
                plusBtn.className = 'plus-icon';
                plusBtn.innerHTML = '+';
                plusBtn.type = 'button';
                
                wrapper.appendChild(input);
                wrapper.appendChild(plusBtn);
                td.appendChild(wrapper);
                tr.appendChild(td);
            });
            
            fragment.appendChild(tr);
        });
        
        body.innerHTML = "";
        body.appendChild(fragment);
        attachInputEvents();
        attachModalEvents();
        attachFinishButton();
    }

    function attachInputEvents() {
        const body = document.getElementById("inspectionBody");
        
        // Use event delegation for input changes
        body.addEventListener("input", (e) => {
            const input = e.target.closest(".defect-input");
            if (!input) return;
            
            handleInputChange(input);
        });

        // Handle keydown to prevent negative signs and decimals
        body.addEventListener("keydown", (e) => {
            const input = e.target.closest(".defect-input");
            if (!input) return;

            if (['-', '+', '.', ',', 'e', 'E'].includes(e.key)) {
                e.preventDefault();
                return false;
            }
        });

        // Handle paste to prevent invalid input
        body.addEventListener("paste", (e) => {
            const input = e.target.closest(".defect-input");
            if (!input) return;

            e.preventDefault();
            const pastedData = e.clipboardData.getData('text');
            const numValue = parseInt(pastedData);
            
            if (!isNaN(numValue) && numValue >= 0) {
                input.value = numValue;
                handleInputChange(input);
            }
        });

        // Handle blur to ensure valid value
        body.addEventListener("blur", (e) => {
            const input = e.target.closest(".defect-input");
            if (!input) return;

            let value = parseInt(input.value);
            if (isNaN(value) || value < 0) {
                input.value = 0;
                handleInputChange(input);
            }
        }, true);

        // Plus icon click - open modal
        body.addEventListener("click", (e) => {
            const plusBtn = e.target.closest(".plus-icon");
            if (!plusBtn) return;
            
            openModal();
        });
    }

    function attachModalEvents() {
        const modal = document.getElementById('defectModal');
        const closeBtn = document.querySelector('.close-modal');
        const cancelBtn = document.getElementById('cancelBtn');
        const submitBtn = document.getElementById('submitBtn');
        const captureBtn = document.getElementById('capturePhotoBtn');
        const photoInput = document.getElementById('photoInput');

        // Close modal
        closeBtn.onclick = closeModal;
        cancelBtn.onclick = closeModal;

        // Close when clicking outside
        window.onclick = function(event) {
            if (event.target == modal) {
                closeModal();
            }
        };

        // Capture photo
        captureBtn.onclick = function() {
            photoInput.click();
        };

        // Handle photo selection
        photoInput.onchange = function(e) {
            const preview = document.getElementById('photoPreview');
            preview.innerHTML = '';
            
            Array.from(e.target.files).forEach((file, idx) => {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const item = document.createElement('div');
                    item.className = 'photo-item';
                    item.innerHTML = `
                        <img src="${event.target.result}" alt="Photo ${idx + 1}">
                        <button class="remove-photo" onclick="this.parentElement.remove()">×</button>
                    `;
                    preview.appendChild(item);
                };
                reader.readAsDataURL(file);
            });
        };

        // Submit
        submitBtn.onclick = function() {
            const requestType = document.getElementById('requestType').value;
            const reason = document.getElementById('reason').value.trim();
            
            if (!requestType || !reason) {
                alert('Vui lòng điền đầy đủ thông tin!');
                return;
            }
            
            closeModal();
            showSuccessToast('✓ Đã thông báo tới bộ phận liên quan');
            
            // Reset form
            document.getElementById('requestType').value = '';
            document.getElementById('reason').value = '';
            document.getElementById('photoPreview').innerHTML = '';
        };
    }

    function attachFinishButton() {
        const finishBtn = document.getElementById('finishBtn');
        if (finishBtn) {
            finishBtn.onclick = function() {
                showSuccessToast('✓ Đã hoàn thành kiểm tra!');
            };
        }
    }

    function openModal() {
        document.getElementById('defectModal').style.display = 'block';
        document.body.style.overflow = 'hidden';
    }

    function closeModal() {
        document.getElementById('defectModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    function handleInputChange(input) {
        const index = parseInt(input.dataset.index);
        const key = input.dataset.key;
        let value = input.value;

        value = value.replace(/[^0-9]/g, '');
        let numValue = parseInt(value) || 0;
        
        if (numValue < 0) {
            numValue = 0;
        }

        input.value = numValue;
        inspectionData[index][key] = numValue.toString();
        
        const total = defectKeys.reduce((sum, k) => {
            return sum + (parseInt(inspectionData[index][k]) || 0);
        }, 0);
        inspectionData[index].tong_loi = total;
        
        const totalCell = input.closest("tr").querySelector(".total");
        totalCell.textContent = total;

        debounceSave();
    }

    function debounceSave() {
        if (saveTimeout) clearTimeout(saveTimeout);
        
        saveTimeout = setTimeout(() => {
            fetch('/api/inspection/update', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(inspectionData)
            })
            .then(res => {
                if (!res.ok) throw new Error("Cập nhật thất bại");
                console.log("✅ File JSON đã được cập nhật");
            })
            .catch(err => console.error("❌ Lỗi khi cập nhật file JSON:", err));
        }, 500);
    }

    (function($) {
  // Code jQuery ở đây
  $(document).ready(function() {
    console.log("jQuery đã sẵn sàng!");
  });
})(jQuery);
</script>
}

